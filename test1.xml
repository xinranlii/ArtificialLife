<mujoco>
    <worldbody>
        <light diffuse="1 1 1" pos="0 0 10" dir="0 0 -1"/>
        
        <!-- Ground plane with a neutral color -->
        <geom type="plane" size="10 10 0.05" rgba="0.95 0.95 0.95 1"/> 
        
        <!-- Door frame as a static object -->
        <!-- Left frame -->
        <geom type="box" size="0.05 0.05 2" rgba="0.5 0.5 0.5 1" pos="-0.95 0 2"/> 
        <!-- Right frame -->
        <geom type="box" size="0.05 0.05 2" rgba="0.5 0.5 0.5 1" pos="0.95 0 2"/>
        <!-- Top frame -->
        <geom type="box" size="1.9 0.05 0.05" rgba="0.5 0.5 0.5 1" pos="0 0 4.05"/> 

        <!-- Door defined with a hinge joint -->
        <body name="door_body" pos="-0.9 0 2">
            <geom type="box" size="0.05 0.9 2" rgba="1 1 1 1"/>
            <joint name="door_hinge" type="hinge" axis="0 0 1" pos="0.9 0 0" range="-90 0"/>
        </body>

    </worldbody>

    <actuator>
        <position joint="door_hinge" kp="500"/>
    </actuator>
</mujoco>